<div class="mx-auto w-full rounded overflow-hidden bg-white mb-4 shadow-lg">
    <div class="p-6">
        <div class="text-lg mb-2">
            {{ status.text }}
        </div>
        <hr class="mb-2"/>
        <div class="text-xs pt-2 mb-4">
            <p class="text-gray-700 float-left">{{ status.createdAt.format('D M d, h:i') }}</p>
            {% if is_granted('STATUS_DELETE', status) %}
                <form action="{{ url('status_delete', {'id': status.id}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ status.id) }}">
                    <button type="submit" class="text-gray-600 float-right">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>
</div>
